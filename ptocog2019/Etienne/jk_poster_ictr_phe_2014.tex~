	\begin{column}{0.49\textwidth} % right column
	  \vspace{-2ex}
         %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%  
	  \begin{block}{Test of hodoscope prototypes in the beam}
             \begin{itemize}
              \item{use of standard NIM electronics and VME DAQ}
              \item{75~MeV/u $^{13}$C ions at GANIL and 25~MeV protons at 
                  IPN Orsay}
              \item{cyclotron HF as time reference \Red{$\Rightarrow$}
                  time resolution  1~ns FWHM}
              \item{2D distribution of hits \Red{$\Rightarrow$} beamspot}
              \end{itemize}
              \begin{columns}[c]
              \begin{column}{0.49\textwidth}
                \centering{
                \includegraphics[angle=0,width=1\textwidth]{./figures/time_ganil2009_2}}
            \end{column}
            \begin{column}{0.49\textwidth}
              \includegraphics[angle=90,width=1\textwidth]{./figures/beamspot_allmult}
            \end{column}
            \end{columns}
          \end{block}
	  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%  
	  \begin{block}{Maximum count rates}
	    \begin{columns}[c]
	      \begin{column}{0.49\textwidth}
		\begin{itemize}
		\item{tests with two different PMs:}
		  \begin{itemize}
		  \item{multi-anode PM H-8500}
		  \item{micro-channel-plate PM}
		  \end{itemize}
		\item{MCP-PMT needed to be operated close to maximum voltage\\
		  \Red{$\Rightarrow$} less performant than MA-PM}
		\item{maximum rate $>$ 10~MHz} 
		\end{itemize}
	      \end{column}
	      \begin{column}{0.49\textwidth}
		\centering{
		  \includegraphics[angle=0,width=0.95\textwidth]{./figures/hod_rate_orsay}
		  }
	      \end{column}
	    \end{columns}
	  \end{block}
	  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% 
	  \begin{block}{Outlook}
	    \begin{minipage}{0.59\textwidth}
	    \begin{itemize}
	      \item{characterization of MA PMs \\ 
		\Red{$\Rightarrow$} adaption of gains}
	      \item{test of new ASICs including TDCs}
	      \item{new DAQ system \Red{$\Rightarrow$} $\mu$TCA}
	      \item{test in beam with final system}
	    \end{itemize}
	    \end{minipage}
	    \begin{minipage}{0.37\textwidth}
	      \centering{
		\includegraphics[width=0.8\textwidth]{./figures/photo_microtca}
		}
	    \end{minipage}
