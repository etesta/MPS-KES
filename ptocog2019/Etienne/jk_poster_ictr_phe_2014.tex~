%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%    
      \begin{block}{Introduction}
	\begin{columns}[t]
	  \begin{column}{0.49\textwidth}
	    \centering{\Red{\large{hadrontherapy}}}
	    \begin{itemize}
	    \item{dose concentrated in Bragg Peak}
	    \item{carbon ions: higher RBE \Red{$\Rightarrow$} treatment of radioresistant tumors
	    }
	    \item{increased sensitivity to range uncertainties
	      \Red{$\Rightarrow$} online monitoring highly desired}
	    \end{itemize}
	    \begin{columns}[c]
	      \begin{column}{0.49\textwidth}
		\centering{\includegraphics[width=0.7\textwidth]{./figures/dose_depth_comp}}
	      \end{column}
	      \begin{column}{0.49\textwidth}
		\centering{\includegraphics[width=0.9\textwidth]{./figures/imrt_12C_comp}}
	      \end{column}
	    \end{columns}
	    \end{column}

	    \begin{column}{0.49\textwidth}
	      \centering{\Red{\large{online monitoring of the ion range}}}\\
	      \begin{itemize}
	      \item{detection of secondary radiation induced by nuclear 
		reations}
	      \item{prompt-$\gamma$ rays: collimated 
		camera~\cite{Min2006, Testa2009} 
		and Compton Camera~\cite{Roellinghoff}}
	      \item{protons: interaction vertex 
		imaging~\cite{Amaldi, Henriquet, Reithinger}}
	      \item{reconstruction: intersection of line with plane, cone or 
		line, respectively}
	      \item{\Blue{beam tagging hodoscope}: direction of incident ions,
		time reference}
	      \end{itemize}
	      \vspace{0.01\textheight}

	      \includegraphics[width=0.3\textwidth]{./figures/CollimatedCamera2}
	      \includegraphics[width=0.3\textwidth]{./figures/ComptonCamera_Stack}
	      \includegraphics[width=0.3\textwidth]{./figures/Interaction_Vertex_Imaging}
	    \end{column}
	\end{columns}
      \end{block} % introduction
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

      \begin{columns}[t]
	\begin{column}{0.49\textwidth}
	  \vspace{-2ex}
	  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	  \begin{block}{The device}
	    \begin{columns}[t]
	      \begin{column}{0.49\textwidth}
		\begin{itemize}
		  \item{goals:}
		    \begin{itemize}
		    \item{position resolution 1~mm}
		    \item{time resolution 1~ns}
		    \item{count rate 10$^{8}$ 1/s}
		    \end{itemize}
		  \item{array of scintillating fibers \\
		    (1~mm $\times$ 1~mm) BCF10/12}
		  \item{prototypes: 2$\times$32 and 2$\times$128 fibers}
		  \item{readout: optical fibers FORETEC coupled to 
		    multianode PM H-8500}
		\end{itemize}
	      \end{column}
	      \begin{column}{0.49\textwidth}
		\begin{center}
		  \includegraphics[width=1\textwidth]{./figures/photo_hodoscope_256ch_2}
		% \includegraphics[width=1\textwidth]{./figures/BigHodoOpen_light} 
		\end{center}
	      \end{column}
	    \end{columns}
	  \end{block}
	  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	  \begin{block}{Front-end electronics}
%	    \begin{columns}[t]
	      \begin{minipage}{0.49\textwidth}
		\begin{itemize}
		  \item{development of ASICs}
		  \item{current conveyor + comparator~\cite{Deng}}
		  \item{charge sensitive amplifier}
	
		\end{itemize}
	      \end{minipage}
	      \begin{minipage}{0.45\textwidth}
		\begin{center}
		\includegraphics[width=0.4\textwidth]{./figures/photo_asic1}
		\end{center}
	      \end{minipage}
	      
	      \vspace{1ex}
	      
              \begin{minipage}{0.49\textwidth}
                \begin{itemize}
                \item{new version including TDC}
                \item{160~MHz clock + DLL \\
                    Delay Locked Loop}
                \item{time resolution 140~ps}
                \item{max. count rate 10$^{8}$ 1/s}
                \end{itemize}
              \end{minipage}
              \begin{minipage}{0.45\textwidth}
                \begin{center}
                  \includegraphics[width=0.75\textwidth]{./figures/asic_tdc_layout}
                \end{center}
              \end{minipage}
%	    \end{columns}

	  \end{block}
	  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
          \begin{block}{Test of ASIC (first version)}
	    \begin{minipage}{0.45\textwidth}
	      \begin{itemize}
	      \item{test at GANIL and HIT \\
	      $^{12}$C ions 95-400~MeV/u}
	      \item{card with 8 ASICs connected \\
		to hodoscope 2$\times$32}
	      \item{PXIe DAQ system + LabView}
	      \end{itemize}
	    \end{minipage}
	    \begin{minipage}{0.52\textwidth}
	      \centering
	      \includegraphics[width=0.8\textwidth]{./figures/exp_hit_nov13}
	    \end{minipage}

	    \vspace{0.5ex}
	    \begin{itemize}
	    \item{online display of the beam profile and measured charge from 
	      a single fiber}
	      \end{itemize}
	    \begin{minipage}{0.54\textwidth}
	      \centering{
	      	\includegraphics[width=0.9\textwidth]{./figures/screenshot_run60}	      }
