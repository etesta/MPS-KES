doi = {10.1016/j.zemedi.2014.04.001},
file = {:D\:/postdoc/naslag/papers-mend/Baldacci et al. - 2014 - A track length estimator method for dose calculations in low-energy x-ray irradiations implementation, properti.pdf:pdf},
issn = {09393889},
journal = {Zeitschrift fur Medizinische Physik},
keywords = {Dose calculation,GATE,Kerma approximation,Monte Carlo simulation,Track length estimator,Variance reduction},
month = {jul},
pages = {1--12},
pmid = {24973309},
publisher = {Elsevier B.V.},
title = {{A track length estimator method for dose calculations in low-energy x-ray irradiations: implementation, properties and performance}},
