issn = {0094-2405},
journal = {Medical Physics},
keywords = {dosimetry,epid,in vivo,qa,real-time},
number = {7},
pages = {1--13},
pmid = {27370115},
title = {{Online 3D EPID-based dose verification : proof of concept}},
