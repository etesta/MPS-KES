doi = {10.1118/1.2259819},
file = {:D\:/postdoc/naslag/papers-mend/Chytyk, McCurdy - 2006 - Investigation of tilted dose kernels for portal dose prediction in a-Si electronic portal imagers.pdf:pdf},
