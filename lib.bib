doi = {10.1118/1.1869072},
file = {:D\:/postdoc/naslag/papers-mend/Kirkby, Sloboda - 2005 - Comprehensive Monte Carlo calculation of the point spread function for a commercial a-Si EPID.pdf:pdf},
