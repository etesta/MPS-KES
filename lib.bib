doi = {10.1016/j.ijrobp.2015.04.006},
file = {:D\:/postdoc/naslag/papers-mend/Schuemann et al. - 2014 - Assessing the Clinical Impact of Approximations in Analytical Dose Calculations for Proton Therapy.pdf:pdf},
issn = {1879355X},
journal = {International Journal of Radiation Oncology Biology Physics},
pmid = {26025779},
