file = {:D\:/postdoc/naslag/papers-mend/K Parodi, A Ferrari, F Sommerer - 2007 - A MC tool for CT-based calculations of dose delivery and $\beta$ - activation in proton therapy.pdf:pdf},
isbn = {1742-6596},
issn = {0031-9155},
journal = {Journal of Physics: Conference Series},
pages = {1--6},
pmid = {17664549},
title = {{A MC tool for CT-based calculations of dose delivery and $\beta$ + - activation in proton therapy}},
