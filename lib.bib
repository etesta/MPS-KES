journal = {Physics in medicine and biology},
keywords = {Background Radiation,Gamma Rays,Gamma Rays: therapeutic use,Imaging,Phantoms,Protons,Protons: therapeutic use,Radiation Protection,Scintillation Counting,Scintillation Counting: instrumentation,Scintillation Counting: methods,Time Factors,Water},
month = {oct},
