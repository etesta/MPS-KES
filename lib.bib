issn = {00942405},
journal = {Medical Physics},
keywords = {Distance-to- agreement,Dose distribution analysis,Quality assurance,Radiation therapy,Three-dimensional treatment planning},
number = {5},
pages = {656--661},
pmid = {9608475},
title = {{A technique for the quantitative evaluation of dose distributions}},
