issn = {13616560},
journal = {Physics in Medicine and Biology},
keywords = {Compton camera,image reconstruction,point spread function,prompt gamma imaging},
number = {3},
pmid = {29189207},
publisher = {IOP Publishing},
title = {{PSF reconstruction for Compton-based prompt gamma imaging}},
volume = {63},
year = {2018}
}
