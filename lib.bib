isbn = {0031-9155},
issn = {1361-6560},
journal = {Physics in medicine and biology},
number = {22},
pages = {R419--72},
pmid = {25361443},
title = {{Relative biological effectiveness (RBE) values for proton beam therapy. Variations as a function of biological endpoint, dose, and linear energy transfer.}},
url = {http://stacks.iop.org/0031-9155/59/i=22/a=R419%255Cnhttp://www.ncbi.nlm.nih.gov/pubmed/25361443},
volume = {59},
