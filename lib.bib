issn = {1361-6560},
journal = {Physics in medicine and biology},
keywords = {Monte Carlo Method,Neutrons,Phantoms, Imaging,Proton Therapy,Proton Therapy: methods,Radionuclide Imaging,Radiotherapy Dosage,Radiotherapy, Computer-Assisted,Radiotherapy, Computer-Assisted: methods,Time Factors},
