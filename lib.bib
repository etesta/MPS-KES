file = {:D\:/postdoc/naslag/papers-mend/Mijnheer et al. - 2015 - Overview of 3-year experience with large-scale electronic portal imaging device-based 3-dimensional transit dos.pdf:pdf},
isbn = {1879-8500 (Print)},
issn = {18798500},
journal = {Practical Radiation Oncology},
number = {6},
pages = {e679--e687},
pmid = {26421834},
publisher = {American Society for Radiation Oncology},
title = {{Overview of 3-year experience with large-scale electronic portal imaging device-based 3-dimensional transit dosimetry}},
url = {http://dx.doi.org/10.1016/j.prro.2015.07.001},
volume = {5},
year = {2015}
