journal = {Medical physics},
keywords = {Computer-Aided Design,Equipment Design,Equipment Failure Analysis,Equipment Failure Analysis: instrumentation,Gamma Rays,Protons,Protons: therapeutic use,Radiation Dosage,Radiometry,Radiometry: instrumentation,Radiotherapy, High-Energy,Radiotherapy, High-Energy: instrumentation,Reproducibility of Results,Sensitivity and Specificity},
