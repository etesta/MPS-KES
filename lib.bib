file = {:D\:/postdoc/naslag/papers-mend/Polf et al. - 2015 - Imaging of prompt gamma rays emitted during delivery of clinical proton beams with a Compton camera feasibility stu.pdf:pdf},
issn = {0031-9155},
journal = {Phys Med Biol},
number = {18},
pages = {7085--7099},
pmid = {26317610},
publisher = {IOP Publishing},
title = {{Imaging of prompt gamma rays emitted during delivery of clinical proton beams with a Compton camera: feasibility studies for range verification}},
url = {http://dx.doi.org/10.1088/0031-9155/60/18/7085},
volume = {60},
year = {2015}
}
@article{Solevi2016,
