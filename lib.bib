issn = {13616560},
journal = {Physics in Medicine and Biology},
keywords = {electronic portal imaging device (EPID),in vivo dosimetry,portal dosimetry,verification},
number = {19},
pages = {N171--N179},
pmid = {25211121},
title = {{Clinical implementation and rapid commissioning of an EPID based in-vivo dosimetry system}},
